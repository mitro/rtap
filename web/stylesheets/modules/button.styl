.m-btn
  display: inline-block
  padding: 8px 15px
  box-sizing: border-box
  font-size: 14px
  color: #fff
  background: #32a4d9
  border-radius: 3px
  border: none
  text-decoration: none
  text-align: center

  &:hover
    background: #3388af
    text-decoration: none

  &:active
    background: #216a8c

  &.m-btn-sm
    font-size: 12px
    padding: 6px 13px

  &.m-btn-block
    display: block
    width: 100%

  &.m-btn-link
    background: none
    color: $base_link_color

  &.m-btn-success
    background: none
    color: #26cd49
    border: 1px solid

    &.m-btn-active
      background:#26cd49
      color: #fefefe
      border-color:#26cd49

  &.m-btn-load-more
    display: block
    margin: 10px 0
    width: 100%
    text-align: center
    font-size: 12px
    color: darken($placeholder_color, 20%)
    background: none

    &:hover
      color: $secondary_color
      background-color: #f5fcff

// Custom overrides
label.m-btn
  button
    display: none
